# ================================
# ü§ñ Bot Configuration
# ================================

# Discord bot token for authentication
BOT_TOKEN= # Your Discord bot token here

# Optional array of guild ids where the bot should register commands
GUILDS= # Commas seperated list of guilds enabled for usage

# Required Mongo Database connection URL
MONGO_URI=

# ================================
# üìù Logging Configuration
# ================================

# Enable or disable general logging (true/false)
ENABLE_LOGGING=false

# Channel ID for general error logging
ERROR_LOGGING_CHANNEL= # Channel ID for error logs

# Channel ID for command usage logging
COMMAND_LOGGING_CHANNEL= # Channel ID for command logs

# ================================
# üîë API Keys & External Services
# ================================

# Valhalla API configuration for external services
VALHALLA_API_URI=https://api.valhalladev.org/v1 # Base URI for Valhalla API
VALHALLA_API_KEY= # Authentication key for Valhalla API access (request via emailing ragnarlothbrokjr@proton.me)

# ================================
# üß† OpenRouter AI Configuration
# ================================

# OpenRouter API key for AI chatbot requests
OPENROUTER_API_KEY= # Your OpenRouter API key

# Default OpenRouter model to use for chatbot responses
OPENROUTER_MODEL=openai/gpt-4o-mini # Model identifier

# Local markdown file path for the AI system prompt
OPENROUTER_SYSTEM_PROMPT_FILE=src/config/system-prompt.md # Relative or absolute .md path

# Maximum AI queries allowed per user before cooldown
MAX_AI_QUERIES_LIMIT=30 # Number of queries per reset window

# AI query reset window (e.g., 1h, 6h, 24h, 7d)
AI_QUERIES_RESET_TIME=24h # Cooldown reset duration

# Optional comma separated AI admin user IDs
AI_ADMIN_USER_IDS= # Commas separated list of AI admin user IDs

# Optional comma separated AI staff role IDs
AI_STAFF_ROLE_IDS= # Commas separated list of AI staff role IDs